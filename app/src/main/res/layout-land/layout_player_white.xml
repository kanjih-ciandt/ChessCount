<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    >
    <TextView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="8dp"
        android:text="@string/PlayerWhite"
        android:textSize="14sp"
        android:textColor="#616161"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:id="@+id/team_w_score"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="0.0"
        android:textSize="30sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-light"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <ImageButton
            android:id="@+id/btn_pawn_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="scoreGetPawnByWhite"
            android:src="@drawable/pawn_white_48"
            />

        <ImageButton
            android:id="@+id/btn_bishop_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="scoreGeBishopByWhite"

            android:src="@drawable/bishop_white_48"/>
        <ImageButton
            android:id="@+id/btn_knight_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="scoreGetKnightByWhite"
            android:src="@drawable/knight_white_48"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/btn_rook_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="scoreGetRookByWhite"
            android:src="@drawable/rook_white_48"
            />

        <ImageButton
            android:id="@+id/btn_queen_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="scoreGetQueenByWhite"

            android:src="@drawable/queen_white_48"/>
        <ImageButton
            android:id="@+id/btn_king_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="scoreGetKingByWhite"
            android:src="@drawable/king_white_48"/>
    </LinearLayout>
</LinearLayout>